<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/frag_bg"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/left_head"
        android:background="#505050"
        android:layout_width="match_parent"
        android:layout_height="150dp">


    <LinearLayout
        android:id="@+id/load_add"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

            <LinearLayout
                android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/phone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="120dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/ph"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/phone"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/q2"
        android:gravity="center"
        android:layout_toRightOf="@+id/q1"
        android:orientation="vertical"
        android:layout_height="120dp">
        <ImageView

            android:id="@+id/weixin"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/weixin1"
            />
    </LinearLayout>
             <LinearLayout
                 android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/q1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="120dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/qq"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/qq01"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
        android:id="@+id/q3"
        android:gravity="center"
        android:layout_toRightOf="@+id/q2"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="120dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/weibo"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/weibo"
            />
     </LinearLayout>

    </LinearLayout>
      <TextView
          android:layout_below="@+id/load_add"
          android:id="@+id/load_more"
          android:text="更多登录方式>"
          android:gravity="center"
          android:textSize="12dp"
          android:textColor="#cacaca"
          android:layout_marginLeft="100dp"
          android:paddingLeft="2dp"
          android:layout_marginTop="-8dp"
          android:background="@drawable/more_back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/ce_layout_bg"
        android:id="@+id/show"
        android:layout_below="@+id/left_head"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout

            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/shoucang"
                android:src="@drawable/shoucang"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:layout_below="@+id/shoucang"
                android:id="@+id/shoucang_text"
                android:text="收藏"
                android:paddingLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/lishi"
                android:src="@drawable/lishi"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:layout_below="@+id/lishi"
                android:id="@+id/lishi_text"
                android:text="历史"
                android:paddingLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/yejian"
                android:src="@drawable/yejian"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:paddingLeft="4dp"
                android:layout_below="@+id/yejian"
                android:id="@+id/yejian_text"
                android:text="夜间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my"
        android:background="@color/ce_layout_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/show"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_weight="1"
            android:paddingLeft="17dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="我的关注"
                android:textSize="14dp"
                android:textColor="@color/ce_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toLeftOf="@+id/t1"
                android:paddingRight="10dp"
                android:textSize="13dp"
                android:textColor="#333333"
                android:text="我的直播"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/t1"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:text="＞"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:background="#e8e8e8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:paddingLeft="17dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:text="消息通知"
                android:textSize="14dp"
                android:textColor="@color/ce_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:text="  ＞"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/two"
        android:background="@color/ce_layout_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/my"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_weight="1"
            android:paddingLeft="17dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="头条商城"
                android:textSize="14dp"
                android:textColor="@color/ce_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toLeftOf="@+id/t"
                android:paddingRight="10dp"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:text="邀请好友得200现金奖励"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/t"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:text="＞"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:background="#e8e8e8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:paddingLeft="17dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:text="京东特供"
                android:textSize="14dp"
                android:textColor="@color/ce_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/xing"
                android:paddingRight="10dp"
                android:textSize="12dp"
                android:text=" 新人领188元红包"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/xing"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:text="＞"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/three"
        android:background="@color/ce_layout_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/two"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <RelativeLayout
            android:layout_weight="1"
            android:paddingLeft="17dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="我要爆料"
                android:textSize="14dp"
                android:textColor="@color/ce_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/three1"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:text="＞"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:background="#e8e8e8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:paddingLeft="17dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:text="用户反馈"
                android:textSize="14dp"
                android:textColor="@color/ce_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:text="  ＞"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:background="#e8e8e8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:paddingLeft="17dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:text="系统设置"
                android:textSize="14dp"
                android:textColor="@color/ce_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:text="  >"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_above="@+id/left_buttom"
        android:layout_below="@+id/three"
        android:background="@color/ce_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

    <RadioGroup
        android:id="@+id/left_buttom"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:weightSum="4"

        android:layout_height="50dp">

        <RadioButton
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="10dp"
            android:text="首页"
            android:drawableTop="@drawable/aa"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <RadioButton
            android:layout_marginTop="4dp"
            android:text="视频"
            android:drawableTop="@drawable/bb"
            android:gravity="center"
            android:textSize="10dp"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <RadioButton
            android:layout_marginTop="4dp"
            android:text="微头条"
            android:drawableTop="@drawable/cc"
            android:gravity="center"
            android:textSize="10dp"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <RadioButton
            android:layout_marginTop="4dp"
            android:text="未登录"
            android:drawableTop="@drawable/dd"
            android:gravity="center"
            android:textSize="10dp"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </RadioGroup>
</RelativeLayout>
